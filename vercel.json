{
  "buildCommand": "cd website && npm install && npm run build && cd ../app && npm install && npm run build",
  "outputDirectory": "website/.next",
  "rewrites": [
    {
      "source": "/app/:path*",
      "destination": "/app/dist/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "ferien-planung.de"
        }
      ]
    }
  ],
  "installCommand": "echo 'Installing dependencies in individual directories'"
} 